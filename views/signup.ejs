<%- partial('onedeep_topbar.ejs') %>

<div class="content-padded">

<h1 style="padding:10px;">
    Sign on up!
</h1>

<% if (error) { %>
  <div style="background:red;color:white;font-weight:bold;padding:5px;margin:5px;">
    <%= error %>
  </div>
<% } %>

<form id="signup" method="post" action="/signup">
  <div class="input-group">
    <input type="text" name="name" placeholder="Full name"/>
    <input type="tel" name="phone" placeholder="Phone"/>
  </div>
</form>

<div id="signupbutton" class="button-positive button-block">Signup</div>
</div>

<%- partial('standard_footer.ejs') %>
